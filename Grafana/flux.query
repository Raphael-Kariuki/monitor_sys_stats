from(bucket: "sys_stats4")
  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)
  |> filter(fn: (r) => r["Hostname"] == "{add hostname of system involved}")
  |> filter(fn: (r) => r["_measurement"] == "cpu_stats" or r["_measurement"] == "disk_stats" or r["_measurement"] == "mem_stats")
  |> filter(fn: (r) => r["_field"] == "Usage" or r["_field"] == "cpupercent" or r["_field"] == "used_ram")